{% extends "base.twig" %}

{% block page_title %}В работе — artwall.pro{% endblock %}

{% block page_header %}
    <div class="page-header">
        <h1>Картины в работе</h1>
    </div>
{% endblock %}

{% block page_contents %}
    {% if nodes %}
        <table class="table lines hover queue">
            <thead>
                <tr>
                    <th/>
                    <th>Название</th>
                    <th>Автор</th>
                    <th class="number">Комиссия</th>
                    <th>Добавлена</th>
                    <th/>
                </tr>
            </thead>
            <tbody>
                {% for n in nodes %}
                    <tr id='picture_{{ n.id }}' class="status_{{ n.status }}" data-id='{{ n.id }}'>
                        <td><a class="img" href="{{ file_link(n.file) }}" data-fancybox='gallery' data-src='{{ file_link(n.file, 'large') }}'><img src="{{ file_link(n.file, "small") }}" alt=""/></a></td>
                        <td><a href="/node/{{ n.id }}/edit?back={{ request.uri }}">{{ n.title }}</a></td>
                        <td>{% if n.author %}<a href="/node/{{ n.author.id }}">{{ n.author.name }}</a>{% else %}(нет данных){% endif %}</td>
                        <td class="number">{{ n.comission }}</td>
                        <td>{{ n.created|date('%d.%m.%Y') }}</td>
                        <td>
                            <a class='btn btn-default btn-icon' href='/node/{{ n.id }}/edit?back={{ request.uri }}'><i title='Редактировать картину' class="fas fa-edit"></i></a>
                            <a data-id='{{ n.id }}' href='#' class='btn btn-default btn-icon picture-delete' title='Удалить картину'><i title='Удалить пользователя' class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class='msgbox'></div>
    {% else %}
        <p>Нет картин в работе.</p>
    {% endif %}
{% endblock %}
