{% endblock %}

{% block page_header %}
    <div class="page-header">
        <h1>Семейный лесопитомник «Ясный лес»</h1>
    </div>
{% endblock %}

{% block body_class %}home{% endblock %}

{% block splash %}
    <div id='splash'>
        <picture>
            <source type='image/webp' srcset='/images/splash2.webp'/>
            <source type='image/jpg' srcset='/images/splash2.jpg'/>
